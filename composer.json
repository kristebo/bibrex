{
	"name": "laravel/laravel",
	"description": "The Laravel Framework.",
	"keywords": ["framework", "laravel"],
	"require": {
        "php": ">= 5.4.0",
		"laravel/framework": "4.0.*",
        "way/generators": "dev-master",
        "danmichaelo/customxmlelement": "dev-master",
        "danmichaelo/ncip": "dev-master",
        "laravel/curl": "dev-master",
        "loic-sharma/profiler": "dev-master"
	},
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "way/laravel-test-helpers": "dev-master",
        "Mockery/Mockery": ">=0.7.2"
    },
    "repositories": [
        {
            "type": "vcs",
            "url":  "https://github.com/danmichaelo/ncip.git"
        }
    ],
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan optimize",
			"php artisan config:publish danmichaelo/ncip",
			"php artisan config:publish loic-sharma/profiler"
		],
		"pre-update-cmd": [
			"php artisan clear-compiled"
		],
		"post-update-cmd": [
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "dev"
}
